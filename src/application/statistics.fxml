<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.StatisticsEventController">
   <children>
      <VBox prefHeight="600.0" prefWidth="500.0">
         <children>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="500.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#refreshPie" text="Actualiser" />
               </children>
            </HBox>
            <StackPane prefHeight="550.0" prefWidth="500.0">
               <children>
                  <PieChart fx:id="chart" prefHeight="550.0" prefWidth="500.0" />
               </children>
            </StackPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
